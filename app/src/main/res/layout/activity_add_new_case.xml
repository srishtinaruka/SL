<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_new_case">

    <TextView
        android:id="@+id/heading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="50dp"
        android:text="Add New Case"
        android:textSize="30dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/accent"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heading"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="5dp"
        android:text="Name"
        android:textSize="17dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/purple"
        />

    <EditText
        android:id="@+id/editName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.85"
        android:background="@drawable/edittextbackground"
        android:hint="name of case"
        android:textColorHint="@color/bg"
        android:textSize="20dp"
        android:layout_marginStart="30dp"
        android:paddingStart="10dp"
        />


    <TextView
        android:id="@+id/case_no"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editName"
        app:layout_constraintHeight_percent="0.02"
        app:layout_constraintWidth_percent="0.2"
        android:text="Case No :"
        android:textSize="17dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/purple"
        />

    <EditText
        android:id="@+id/editCaseNo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/case_no"
        app:layout_constraintTop_toBottomOf="@+id/editName"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.15"
        android:hint="00"
        android:textColorHint="@color/bg"
        android:layout_marginTop="15dp"
        android:textSize="17dp"
        android:background="@drawable/edittextbackground"
        android:paddingStart="10dp"
        android:textColor="@color/purple"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/editCaseNo"
        app:layout_constraintTop_toBottomOf="@+id/editName"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintWidth_percent="0.13"
        android:text="Date :"
        android:textSize="17dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/purple"
        />

    <EditText
        android:id="@+id/editdate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/date"
        app:layout_constraintTop_toBottomOf="@+id/editName"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.3"
        android:hint="DD-MM-YY"
        android:textColorHint="@color/bg"
        android:textSize="17dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittextbackground"
        android:paddingStart="8dp"
        android:textColor="@color/purple"
        />

    <TextView
        android:id="@+id/type"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/case_no"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="20dp"
        android:text="Type"
        android:textSize="17dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/purple"
        />

    <EditText
        android:id="@+id/editType"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.85"
        android:background="@drawable/edittextbackground"
        android:hint="type of case"
        android:textColorHint="@color/bg"
        android:textSize="20dp"
        android:layout_marginStart="30dp"
        android:paddingStart="10dp"
        />

    <TextView
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editType"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="15dp"
        android:text="Status"
        android:textSize="17dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/purple"
        />

    <EditText
        android:id="@+id/editstatus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.85"
        android:background="@drawable/edittextbackground"
        android:hint="status of case"
        android:textColorHint="@color/bg"
        android:textSize="20dp"
        android:layout_marginStart="30dp"
        android:paddingStart="10dp"
        />

    <TextView
        android:id="@+id/fee"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editstatus"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="15dp"
        android:text="Fees"
        android:textSize="17dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/purple"
        />

    <EditText
        android:id="@+id/editFee"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/fee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.85"
        android:background="@drawable/edittextbackground"
        android:hint="fees of case"
        android:textColorHint="@color/bg"
        android:textSize="20dp"
        android:layout_marginStart="30dp"
        android:paddingStart="10dp"
        />

    <TextView
        android:id="@+id/opponent_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editFee"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="15dp"
        android:text="Opponent Name"
        android:textSize="17dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/purple"
        />

    <EditText
        android:id="@+id/editOpponentName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/opponent_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.85"
        android:background="@drawable/edittextbackground"
        android:hint="name of opponent"
        android:textColorHint="@color/bg"
        android:textSize="20dp"
        android:layout_marginStart="30dp"
        android:paddingStart="10dp"
        />
    <TextView
        android:id="@+id/opponent_lawyer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editOpponentName"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="15dp"
        android:text="Opponent Lawyer"
        android:textSize="17dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/purple"
        />

    <EditText
        android:id="@+id/editOpponentLawyer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/opponent_lawyer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.85"
        android:background="@drawable/edittextbackground"
        android:hint="name of opponent lawyer"
        android:textColorHint="@color/bg"
        android:textSize="20dp"
        android:layout_marginStart="30dp"
        android:paddingStart="10dp"
        />

    <TextView
        android:id="@+id/court_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editOpponentLawyer"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="15dp"
        android:text="Court Name"
        android:textSize="17dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/purple"
        />

    <EditText
        android:id="@+id/editCourtName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/court_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.85"
        android:background="@drawable/edittextbackground"
        android:hint="name of court"
        android:textColorHint="@color/bg"
        android:textSize="20dp"
        android:layout_marginStart="30dp"
        android:paddingStart="10dp"
        />

    <TextView
        android:id="@+id/judge_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCourtName"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="15dp"
        android:text="Judge Name"
        android:textSize="17dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/purple"
        />

    <EditText
        android:id="@+id/editJudgeName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/judge_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.85"
        android:background="@drawable/edittextbackground"
        android:hint="name of judge"
        android:textColorHint="@color/bg"
        android:textSize="20dp"
        android:layout_marginStart="30dp"
        android:paddingStart="10dp"
        />

    <Button
        android:id="@+id/addButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/editJudgeName"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintWidth_percent="0.4"
        android:background="@drawable/buttonbackgroundlightpurple"
        android:text="ADD"
        android:textSize="20dp"
        android:textColor="@color/bg"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>